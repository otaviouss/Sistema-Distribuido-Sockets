                id: duracao

        GridLayout:
            cols: 2
            padding: 70
            
            Button:
                text: 'Voltar'
                pos_hint: {'center_x': 0.5}
                size_hint: (0.5, 0.5)
                on_press: root.IrParaMenu()

            Button:
                text: 'Cadastrar'
                background_color: 1, 1, 0, 1
                pos_hint: {'center_x': 0.5}
                size_hint: (0.5, 0.5)
                on_press: root.CadastrarVoucher()

