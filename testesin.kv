                id: descricao

            LabelCadastro:
                text: 'Gato:'
                color: 0,0,0,1
                bold: 1
            InputCadastro:
                id: gato

            LabelCadastro:
                text: 'Local:'
                color: 0,0,0,1
                bold: 1
            InputCadastro:
                id: local

            LabelCadastro:
                text: 'Lanche:'
                color: 0,0,0,1
                bold: 1
            InputCadastro:
                id: lanche

            LabelCadastro:
                text: 'Duração:'
                color: 0,0,0,1
                bold: 1
