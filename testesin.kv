#:kivy 2.1.0

<LabelLogin@Label>:
    canvas.before:
        Color:
            rgba: 255, 255, 255, 0
        Rectangle:
            pos: self.pos
            size: self.size

<Login>:
    BoxLayout:
        orientation: 'vertical'
        padding: 50
        spacing: 20
        LabelLogin:
            id: Jovem
            text: 'TROCAT'
            color: 0,0,0,1
            bold: 1
            font_size: 45
            size_hint: 1, None  

        BoxLayout:
            orientation: 'horizontal'

            LabelLogin:
                text: 'Email'
                color: 0,0,0,1
                bold: 1
                font_size: 20
                size_hint: (0.4, 0.2)
                pos_hint: {'center_x': 0.5}

            Label:
                text: ''
                size_hint: 0.1, 0


            LabelLogin:
                text: 'Senha'
                color: 0,0,0,1
                bold: 1
                font_size: 20
                size_hint: (0.4, 0.2)
                pos_hint: {'center_x': 0.5}

        BoxLayout:
            orientation: 'horizontal'

            TextInput:
                id: OK
                multiline: False
                size_hint: 1, 0.5
                
            Label:
                text: ''
                size_hint: 0.1, 0
            
            TextInput:
                id: not_OK
                multiline: False
                size_hint: 1, 0.5

            
        Button:
            id: loucura
            text: 'Entrar'
            background_color: 1, 1, 0, 1
            on_press: root.Clicou()
            pos_hint: {'center_x': 0.5}
            size_hint: (0.5, 0.5)



<TelaMenu>:
    Label:
        text: 'Menu'
    GridLayout:
        cols: 2

        Button:
            text: 'Vouchers'
            bold: 1
            font_size: 20
            on_press: root.IrParaVouchers()
        Button:
            text: 'Cadastrar Voucher'
            bold: 1
            font_size: 20
            on_press: root.IrParaCadastro()
        Button:
            text: 'Meus Vouchers'
            bold: 1
            font_size: 20
            on_press: root.IrParaMeusVouchers()
        Button:
            text: 'Trocas'
            bold: 1
            font_size: 20
            on_press: root.IrParaTrocas()



# --
<LabelCadastro@Label>:
    #size_hint: None, None  

    canvas.before:
        Color:
            rgba: 255, 255, 255, 0
        Rectangle:
            pos: self.pos
            size: self.size    

# --
<InputCadastro@TextInput>:
    multiline: False
    #size_hint: None, None
# --
<TelaCadastro>:
    BoxLayout:
        padding: 50
        spacing: 10
        orientation: 'vertical'

        LabelCadastro:
            id: cad
            text: 'Cadastrar Voucher'
            font_size: 40
            color: 0,0,0,1
            bold: 1
            size_hint: 1, 0.5

        GridLayout:
            cols: 2
            padding: 10

            LabelCadastro:
                text: 'Título:'
                color: 0,0,0,1
                bold: 1
            InputCadastro:
                id: titulo

            LabelCadastro:
                text: 'Descrição:'
                color: 0,0,0,1
                bold: 1
            InputCadastro:
                id: descricao

            LabelCadastro:
                text: 'Gato:'
                color: 0,0,0,1
                bold: 1
            InputCadastro:
                id: gato

            LabelCadastro:
                text: 'Local:'
                color: 0,0,0,1
                bold: 1
            InputCadastro:
                id: local

            LabelCadastro:
                text: 'Lanche:'
                color: 0,0,0,1
                bold: 1
            InputCadastro:
                id: lanche

            LabelCadastro:
                text: 'Duração:'
                color: 0,0,0,1
                bold: 1
            InputCadastro:
                id: duracao

        GridLayout:
            cols: 2
            padding: 70
            
            Button:
                text: 'Voltar'
                pos_hint: {'center_x': 0.5}
                size_hint: (0.5, 0.5)
                on_press: root.IrParaMenu()

            Button:
                text: 'Cadastrar'
                background_color: 1, 1, 0, 1
                pos_hint: {'center_x': 0.5}
                size_hint: (0.5, 0.5)
                on_press: root.CadastrarVoucher()

<Voucher>:
    canvas.before:
        Color:
            rgba: (.0, 0.9, .1, .3) if self.selected else (0, 0, 0, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    orientation: 'vertical'
    LabelCadastro:
        text: root.label_titulo
    LabelCadastro:
        text: root.label_descricao
    LabelCadastro:
        text: root.label_nome_gato
    LabelCadastro:
        text: root.label_local
    LabelCadastro:
        text: root.label_lanche
    LabelCadastro:
        text: root.label_duracao


<TelaMeusVouchers>:
    BoxLayout:
        orientation: 'vertical'
        padding: 50
        spacing: 20
        LabelLogin:
            text: 'Meus Vouchers'
            color: 0,0,0,1
            bold: 1
            font_size: 45
            size_hint: 1, None
        Button:
            text: 'Retornar menu'
            on_press: root.IrParaMenu()
        RV:
            id: joia
            viewclass: 'Voucher'  # defines the viewtype for the data items.
            orientation: "horizontal"
            data: self.rv_data_list
            spacing: 80
            padding:50, 50
            space_x: self.size[0]/3
            SelectableRecycleGridLayout:
                cols: 3
                size_hint: 1, None
                default_size: None, dp(56)
                default_size_hint: 1, None
                height: self.minimum_height
                width: self.minimum_width
        
<TelaVouchers>:
    on_pre_enter: root.on_pre_enter()
    BoxLayout:
        orientation: 'vertical'
        padding: 50
        spacing: 20
        LabelLogin:
            text: 'Vouchers'
            color: 0,0,0,1
            bold: 1
            font_size: 45
            size_hint: 1, None
        Button:
            text: 'Retornar menu'
            on_press: root.IrParaMenu()
        Button:
            text: 'Carregar Dados'
            on_press: joia.LoadData()
        RV:
            id: joia
            viewclass: 'Voucher'  # defines the viewtype for the data items.
            orientation: "horizontal"
            data: self.rv_data_list
            spacing: 80
            padding:50, 50
            space_x: self.size[0]/3
            SelectableRecycleGridLayout:
                cols: 3
                size_hint: 1, None
                default_size: None, dp(56)
                default_size_hint: 1, None
                height: self.minimum_height
                width: self.minimum_width
        Button:
            text: 'Ampliar visualização'
            on_press: root.IrParaMenu()


<ComponenteTroca>:
    orientation: 'vertical'
    LabelLogin:
        text: 'Titulo'#root.label_titulo

    BoxLayout:
        orientation: 'horizontal'

        #Voucher:

        #Voucher:

    LabelLogin:
        text: 'Aceitar?'
    BoxLayout:
        orientation: 'horizontal'
        Button:
            text: 'S'
        Button:
            text: 'N'

<TelaTrocas>:
    BoxLayout:
        orientation: 'horizontal'
        ComponenteTroca: