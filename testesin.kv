#:kivy 2.1.0
#:import Factory kivy.factory.Factory
<LabelLogin@Label>:
    canvas.before:
        Color:
            rgba: 255, 255, 255, 0
        Rectangle:
            pos: self.pos
            size: self.size

<Login>:
    BoxLayout:
        orientation: 'vertical'
        padding: 50
        spacing: 20
        LabelLogin:
            id: Jovem
            text: 'TROCAT'
            color: 0,0,0,1
            bold: 1
            font_size: 45
            size_hint: 1, None  

        BoxLayout:
            orientation: 'horizontal'

            LabelLogin:
                text: 'Email'
                color: 0,0,0,1
                bold: 1
                font_size: 20
                size_hint: (0.4, 0.2)
                pos_hint: {'center_x': 0.5}

            Label:
                text: ''
                size_hint: 0.1, 0


            LabelLogin:
                text: 'Senha'
                color: 0,0,0,1
                bold: 1
                font_size: 20
                size_hint: (0.4, 0.2)
                pos_hint: {'center_x': 0.5}

        BoxLayout:
            orientation: 'horizontal'

            TextInput:
                id: OK
                multiline: False
                size_hint: 1, 0.5
                
            Label:
                text: ''
                size_hint: 0.1, 0
            
            TextInput:
                id: not_OK
                multiline: False
                size_hint: 1, 0.5

            
        Button:
            id: loucura
            text: 'Entrar'
            background_color: 1, 1, 0, 1
            on_press: root.Clicou()
            pos_hint: {'center_x': 0.5}
            size_hint: (0.5, 0.5)



<TelaMenu>:
